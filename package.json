{
  "name": "nest-cli",
  "version": "0.0.1",
  "license": "MIT",
  "bin": {
    "nest": "index.js"
  },
  "scripts": {
    "build": "npm run -s build:src && npm run -s build:assets",
    "build:src": "tsc",
    "build:assets": "cp -R src/assets bin/assets",
    "clean": "rm -rf bin/*",
    "clean:build": "npm run -s clean && npm run -s build",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "postinstall": "npm run clean:build",
    "test": "nyc --require ts-node/register mocha src/**/*.spec.ts --reporter spec"
  },
  "dependencies": {
    "caporal": "^0.5.0",
    "find-up": "^2.1.0",
    "jsonfile": "^3.0.0",
    "nodegit": "^0.18.3",
    "rimraf": "^2.6.1"
  },
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.18",
    "@types/sinon": "^2.2.2",
    "chai": "^4.0.0",
    "coveralls": "^2.13.1",
    "mocha": "^3.4.2",
    "nyc": "^10.3.2",
    "sinon": "^2.3.2",
    "ts-node": "^3.0.4",
    "typescript": "^2.3.3"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/",
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
