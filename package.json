{
  "name": "nest-cli",
  "version": "0.0.1",
  "license": "MIT",
  "bin": {
    "nest": "index.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf bin/*",
    "coverage": "nyc npm run -s test",
    "postinstall": "npm run build",
    "test": "mocha --require ts-node/register src/**/*.spec.ts"
  },
  "dependencies": {
    "caporal": "^0.5.0",
    "find-up": "^2.1.0",
    "git-clone": "^0.1.0",
    "jsonfile": "^3.0.0",
    "rimraf": "^2.6.1"
  },
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.18",
    "@types/sinon": "^2.2.2",
    "chai": "^4.0.0",
    "mocha": "^3.4.2",
    "nyc": "^10.3.2",
    "sinon": "^2.3.2",
    "ts-node": "^3.0.4",
    "typescript": "^2.3.3"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/",
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
